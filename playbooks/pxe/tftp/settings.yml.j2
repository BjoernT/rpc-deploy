secondary_nameserver: {{ secondary_nameserver }}
host_ip: {{ item.value.host_ip }}
host_nm: {{ host_cidr | ipaddr('netmask') }}
host_gw: {{ host_cidr | ipaddr('1') | ipaddr('address') }}
