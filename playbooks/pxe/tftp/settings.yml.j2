obm_gw: {{ obm_cidr | ipaddr('1') | ipaddr('address') }}
obm_user: {{ obm_user }}
obm_password: {{ obm_password }}
role: {{ item.value.role }}
tftp_server: {{ tftp_server }}
systems_mac: {{ item.value.mac | lower }}
